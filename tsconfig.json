{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["app/components/shared/*"],
			"@features/*": ["app/components/features/*"],
			"@entities/*": ["app/components/entities/*"],
			"@widgets/*": ["app/components/widgets/*"],
			"@lib/*": ["app/lib/*"],
			"@utils/*": ["utils/*"],
			"@constants/*": ["constants/*"],
			"@styles/*": ["styles/*"],
			"@hooks/*": ["hooks/*"]
		},
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNEXT",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"plugins": [{ "name": "next" }]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"app/components/shared/inputs/AutoSave/AutoSave.jsx",
		"i18n.ts"
	],
	"exclude": ["node_modules"]
}
