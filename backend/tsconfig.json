{
	"compilerOptions": {
		"baseUrl": "../",
		"paths": {
			"@interfaces/*": ["interfaces/*"]
		},
		"module": "commonjs",
		"target": "es2017",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist"
	}
}
